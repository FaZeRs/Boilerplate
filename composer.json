{
    "name": "sref/boilerplate",
    "description": "The Boilerplate CMS application.",
    "keywords": [
        "cms",
        "boilerplatecms",
        "laravel"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "laravel/framework": "5.4.*",
        "nwidart/laravel-modules": "^1.26",
        "sref/adminlte-theme": "^1.0",
        "sref/bootstrap-theme": "^1.0",
        "sref/core-module": "^1.0",
        "sref/dashboard-module": "^1.0",
        "sref/language-module": "^1.0",
        "sref/logs-module": "^1.0",
        "sref/menu-module": "^1.0",
        "sref/setting-module": "^1.0",
        "sref/user-module": "^1.0",
        "sref/workshop-module": "^1.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^2.4",
        "barryvdh/laravel-ide-helper": "^2.4",
        "friendsofphp/php-cs-fixer": "^2.3",
        "fzaninotto/faker": "^1.6",
        "laravel/browser-kit-testing": "^2.0",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "^6.2",
        "satooshi/php-coveralls": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
            "Modules\\": "Modules/"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "classmap": [
            "tests/TestCase.php",
            "tests/BrowserKitTestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize --force",
            "php artisan config:cache",
            "php artisan route:clear"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
