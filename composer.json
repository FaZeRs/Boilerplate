{
    "name": "sref/boilerplate",
    "description": "The Boilerplate CMS application.",
    "keywords": [
        "cms",
        "boilerplatecms",
        "laravel"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "fideloper/proxy": "^3.3",
        "laravel/framework": "5.5.*",
        "nwidart/laravel-modules": "^2.5",
        "sref/bootstrap-theme": "dev-master",
        "sref/core-module": "dev-master",
        "sref/dashboard-module": "dev-master",
        "sref/language-module": "dev-master",
        "sref/logs-module": "dev-master",
        "sref/menu-module": "dev-master",
        "sref/setting-module": "dev-master",
        "sref/user-module": "dev-master",
        "sref/workshop-module": "dev-master"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.1",
        "barryvdh/laravel-ide-helper": "^2.4",
        "filp/whoops": "~2.0",
        "friendsofphp/php-cs-fixer": "^2.7",
        "fzaninotto/faker": "^1.7",
        "laravel/browser-kit-testing": "^2.0",
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "^6.4",
        "satooshi/php-coveralls": "^1.0",
        "squizlabs/php_codesniffer": "^3.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
            "Modules\\": "Modules/"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate",
            "@php artisan storage:link"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "@php artisan config:clear",
            "@php artisan route:clear"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "clear-all": [
            "composer dumpautoload -o",
            "@php artisan optimize",
            "@php artisan clear-compiled",
            "@php artisan cache:clear",
            "@php artisan route:clear",
            "@php artisan view:clear",
            "@php artisan config:clear"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
